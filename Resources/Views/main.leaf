<!DOCTYPE html>
<html>
    <head>
        <title>LaSalleChat</title>
        <link rel="stylesheet" href="styles/style.css">

    </head>
    
    <body>
        <div class="chatbox">
            <div class="chatlogs">
                #loop(messages, "message") {
                    <div class="chat self">
                        <h4 class="chat-username">Lactosito</h4>
                        <p class="chat-message">#(message)</p>
                    </div>
                }
                <div class="chat friend">
                    <h4 class="chat-username">caca</h4>
                    <p class="chat-message">Hola pepase!</p>
                </div>
            </div>
            <div class="chat-form">
                <form action="http://localhost:8080/chat" method="post">
                    <textarea name="messageText"></textarea>
                    <button type="submit">Send</button>
                </form>
            </div>
        </div>
    </body>
    
</html>
